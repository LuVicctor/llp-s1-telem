#include <stdio.h>

int main(){
  int Dia;
   printf("Digite um número entre 1 e 7.");
   scanf("%d", &Dia);

  switch (Dia) {
   case 1:
    printf("Domingo.\n");
      break;
    case 2:
    printf("Segunda\n");
      break;
    case 3:
    printf("Terça\n");
      break;
    case 4:
    printf("Quarta\n");
     break;
    case 5:
    printf("Quinta\n");
    break;
    case 6:
    printf("Sexta\n");
    break;
    case 7:
      printf("Sabádo\n");
    break;
    default: printf("número inválido\n");
    break;
  }
  return 0;
    
 }